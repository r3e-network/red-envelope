{
  "name": "miniapp-redenvelope",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@cityofzion/neon-js": "^5.8.0"
  },
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "test": "cd frontend && npm run test",
    "contract:build": "cd contracts && dotnet build",
    "contract:build:csharp": "cd contracts && dotnet build",
    "contract:build:rust:only": "./scripts/build-rust-neo-llvm.sh",
    "contract:build:rust": "npm run -s contract:build:rust:only && npm run -s contract:rust:gate",
    "contract:build:solidity": "./scripts/build-solidity-neo-solc.sh",
    "contract:build:all": "npm run contract:build:csharp && npm run contract:build:rust && npm run contract:build:solidity",
    "contract:rust:size": "node scripts/analyze-rust-artifact-size.js",
    "contract:rust:gate": "node scripts/check-rust-size-gate.js",
    "smoke:testnet": "NETWORK=testnet node scripts/test-testnet.js",
    "smoke:mainnet": "NETWORK=mainnet node scripts/test-testnet.js",
    "verify:network-parity": "node scripts/verify-network-parity.js",
    "verify:all-networks": "npm run verify:network-parity && npm run smoke:testnet && npm run smoke:mainnet"
  }
}
